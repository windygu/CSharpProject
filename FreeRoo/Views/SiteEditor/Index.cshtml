@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Admin.cshtml";
}

@model FreeRoo.SiteInfo

    <div class="container">
        <form role="form" class="form-horizontal" action="/SiteEditor/SetSite.do" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Name">网站名字</label>
                <div class="col-sm-9">
                    <input type="text" name="Name" class="form-control" value="@Model.Name" id="Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Title">网站标题</label>
                <div class="col-sm-9">
                    <input type="text" name="Title" class="form-control" value="@Model.Title" id="Title" />

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Domain">网站域名</label>
                <div class="col-sm-9">
                    <input type="text" name="Domain" class="form-control" value="@Model.Domain" id="Domain" />

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="CopyRight">版权声明</label>
                <div class="col-sm-9">
                    <input type="text" name="CopyRight" class="form-control" value="@Model.CopyRight" id="CopyRight" />

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Description">网站描述</label>
                <div class="col-sm-9">
                    <input type="text" name="Description" class="form-control" value="@Model.Description" id="Drscription" />

                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="KeyWords">网站关键词</label>
                <div class="col-sm-9">
                    <input type="text" name="KeyWords" class="form-control" value="@Model.KeyWords" id="KeyWords" />

                </div>
            </div>
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-default" value="保存" />
            </div>
        </form>
    </div>